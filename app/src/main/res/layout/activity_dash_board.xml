                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/calibri"
                    android:id="@+id/welcomename"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Welcome, Professor Chan!"
                    android:textSize="24sp" />
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_below="@id/welcomename"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ckchan"



                    app:civ_border_width="3dp"
                    app:civ_border_color="#FF000000"/>


                </RelativeLayout>
                </androidx.cardview.widget.CardView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/calibri"
                    android:textAlignment="center"
                    android:text="Account Number: 1155112377"
                    android:textSize="23sp"
                    android:textStyle="bold" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/signoutbutton"
                    android:text = "Change account"
                    android:id = "@+id/changeaccount"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/calibri"
                    android:textAlignment="center"
                    android:text="My WelfareWallet Balance"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="22,860"
                        android:id = "@+id/balance"
                        android:textColor="#000000"
                        android:textSize="40sp"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:id = "@+id/currency"
                        android:layout_toRightOf="@+id/balance"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/calibri"
                        android:text="HKD"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                </RelativeLayout>

